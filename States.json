  "year": 2000,
  "issues": [
    {
      "id": "tax_cuts",
      "name": "Large permanent federal income-tax cuts using most of the budget surplus",
      "scale": {
        "-1": "state opinion leans against large tax cuts; prefers debt reduction or new spending",
        "0": "state opinion is mixed or closely divided",
        "1": "state opinion leans in favor of large tax cuts"
      }
    },
    {
      "id": "social_security_medicare",
      "name": "Market-based reforms to Social Security and Medicare (such as personal investment accounts)",
      "scale": {
        "-1": "state opinion leans toward protecting existing guarantees and opposing major market-based changes",
        "0": "state opinion is mixed or pragmatic about reforms",
        "1": "state opinion leans toward major market-based reforms"
      }
    },
    {
      "id": "education_reform",
      "name": "Stronger federal role in setting education standards and testing (No Child Left Behind-style accountability)",
      "scale": {
        "-1": "state opinion prefers local control and minimal federal involvement",
        "0": "state opinion is mixed",
        "1": "state opinion supports strong federal accountability efforts"
      }
    },
    {
      "id": "gun_control",
      "name": "Stricter national gun-control laws (beyond existing background checks)",
      "scale": {
        "-1": "state opinion tends to oppose stricter gun laws and emphasize gun rights",
        "0": "state opinion is mixed",
        "1": "state opinion tends to support stricter gun laws"
      }
    },
    {
      "id": "environment_energy",
      "name": "Aggressive environmental and climate protections, even at some cost to energy production",
      "scale": {
        "-1": "state opinion tends to prioritize energy production and low regulation",
        "0": "state opinion is mixed",
        "1": "state opinion tends to prioritize environmental protection"
      }
    }
  ],
